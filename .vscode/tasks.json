{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "PYTHONHOME": "",
        }
    },
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "compiledb",
            "args": [
                "make",
                "-j24"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build & Flash",
            "type": "shell",
            "command": "compiledb",
            "args": [
                "make",
                "flash",
                "-j24"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        }
    ]
}